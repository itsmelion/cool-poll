{
  "outDir": "./dist",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "isolatedModules": true,
  },
  "include": [
    "src",
    "index.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/index.tsx",
    "**/*.{native|ios|android}.{tsx,ts}",
    "**/*.native.tsx",
    "**/*.native.ts",
    "**/*.ios.tsx",
    "**/*.ios.ts",
    "**/*.android.tsx",
    "**/*.android.ts",
  ]
}
